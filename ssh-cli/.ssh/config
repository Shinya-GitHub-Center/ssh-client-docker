# Host <choose your desired name>
# HostName <host address or IP address>
# User <login user name>
# IdentityFile <full path to your keyfile for logging in>

# in order to keep connection for all hosts
ServerAliveInterval 60

# my ec2 server on subnet01
Host myhappyweb
HostName 77.777.77.77
User ubuntu
IdentityFile /home/ssh-client/.ssh/keyfiles/veryhappy.pem

# my ec2 server on subnet02
Host mysadweb
HostName 66.666.66.66
User ec2-user
IdentityFile /home/ssh-client/.ssh/keyfiles/verysad.pem
